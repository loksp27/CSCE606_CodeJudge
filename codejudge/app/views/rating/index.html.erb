<p id="notice"><%= notice %></p>

<h1>Ratings</h1>
<div class="table col-12">
  <table>
    <thead>
    <tr>
      <th>Rank</th>
      <th colspan="3"></th>
      <th>Username</th>
      <th colspan="3"></th>
      <th>Rating</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr id="notice2" onclick="window.location.href='/users/<%= user.id %>';">
        <td><%= index + 1 %></td>
        <th colspan="3"></th>
        <td><%= user.username %></td>
        <th colspan="3"></th>
        <td><%= user.rating %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>