<% content_for :title, "Login" %>
<% content_for :login_content do %>
  <h1>Login</h1>
  <h2 class="subline">Sign in to continue</h2>
  <%= form_tag(log_in_path, :id => "login_form", :method => :post) do |form| %>
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
    <%= label_tag "password", "Password" %>
    <%= password_field_tag "password" %>
    <%= button_tag "log in", :id => "login_btn" %>
  <% end %>
<% end %>