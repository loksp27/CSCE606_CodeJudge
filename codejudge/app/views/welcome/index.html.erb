<h1>Login</h1>
<%= form_tag(log_in_path, :id => "login_form", :method => :post) do |form| %>
  <%= label_tag "email", "Email:" %>
  <%= text_field_tag "email", nil, :placeholder => "Enter Email..." %>
  <%= label_tag "password", "Password:" %>
  <%= password_field_tag "password", nil, :placeholder => "Password" %>
  <%= submit_tag "Login", :id => "login_btn" %>
<% end %>